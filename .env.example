# GCP Settings - RAG Engine Configuration
PROJECT_ID=your-project-id
LOCATION=us-central1
RAG_CORPUS_ID=projects/your-project-id/locations/us-central1/ragCorpora/your-corpus-id

# Cloud Function Settings - Auto-document ingestion
GCS_DOCUMENTS_BUCKET=your-documents-bucket-name  # Required for auto-ingest Cloud Function
RAG_SERVICE_ACCOUNT=rag-bot-sa@your-project-id.iam.gserviceaccount.com  # Optional: defaults to rag-bot-sa@PROJECT_ID
CLOUD_FUNCTION_NAME=auto-ingest-documents  # Optional: Cloud Function name

# Slack Settings - Get these from your Slack app configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Feature Configuration
USE_GROUNDED_GENERATION=True
MAX_RESULTS=5
RESPONSE_TIMEOUT=30

# Google Cloud Authentication
# Using Application Default Credentials (gcloud auth application-default login)
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json  # Alternative: service account JSON

# Optional: Bot Configuration
BOT_NAME=whatsupdoc
RATE_LIMIT_PER_USER=10
RATE_LIMIT_WINDOW=60

# Gemini Configuration
GEMINI_MODEL=gemini-2.5-flash-lite
# GEMINI_API_KEY=your-api-key-here  # Only needed if USE_VERTEX_AI=False
USE_VERTEX_AI=True

# RAG Generation Settings
ENABLE_RAG_GENERATION=True
MAX_CONTEXT_LENGTH=100000
ANSWER_TEMPERATURE=0.1